FROM php:7.4-fpm-alpine3.12

## install nginx, mysql, supervisor
RUN apk add nginx
RUN apk add mysql
RUN apk add supervisor

##install mongodb
RUN echo 'http://dl-cdn.alpinelinux.org/alpine/v3.6/main' >> /etc/apk/repositories
RUN echo 'http://dl-cdn.alpinelinux.org/alpine/v3.6/community' >> /etc/apk/repositories
RUN apk update
RUN apk add mongodb

## install php-extensions dependencies
RUN apk add php7-bcmath \
  php7-ctype \
  php7-fileinfo \
  php7-json \
  php7-mbstring \
  php7-openssl \
  php7-pdo \
  php7-tokenizer \
  php7-xml \
  php7-dev

## install composer and laravel/installer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
RUN composer global require laravel/installer
ENV PATH /root/.composer/vendor/bin:$PATH

## install mongo extensions
RUN apk add g++ \
  make \
  pkgconf
RUN pecl install mongodb \
  && docker-php-ext-enable mongodb 

# require jenssegers/mongodb
RUN composer require jenssegers/mongodb

## workdir
WORKDIR /var/www/guttag

# Configure supervisor
RUN mkdir -p /etc/supervisor.d/
#COPY ./supervisord.conf /etc/supervisor.d/supervisord.conf

# Configure php-fpm
RUN mkdir -p /run/php/
RUN touch /run/php/php7.4-fpm.pid
RUN touch /run/php/php7.4-fpm.sock
RUN touch /etc/php7/php-fpm.d

COPY ./php-fpm.conf /etc/php7/php-fpm.conf

## config nginx
COPY ./default.conf /etc/nginx/conf.d/default.conf

## run background nginx mongod  
COPY ./entry.sh /entry.sh
RUN chmod 775 /entry.sh
RUN mkdir -p /data/db
#ENTRYPOINT /entry.sh


EXPOSE 80 443

COPY ./supervisord.conf /etc/supervisor.d/supervisord.conf
CMD supervisord -c /etc/supervisor.d/supervisord.conf
